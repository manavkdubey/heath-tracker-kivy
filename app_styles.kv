# Define colors
<Color>:
    app_primary: 0.2, 0.6, 0.8, 1  # Example primary color
    app_secondary: 0.8, 0.2, 0.2, 1  # Example secondary color

# Define fonts
<Label>:
    font_name: 'Roboto'
    font_size: 20

<Button>:
    font_name: 'Roboto'
    font_size: 16

# Define custom button style
<CustomActionButton>:
    background_color: app_primary
    color: 1, 1, 1, 1  # White text color
    size_hint: None, None
    size: 150, 50
